<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/hide_text">
        <Constraint
            android:id="@id/pitomnik_iv">
            <CustomAttribute
                motion:attributeName="Saturation"
                motion:customFloatValue="1" />
            <CustomAttribute
                motion:attributeName="Contrast"
                motion:customFloatValue="1" />
        </Constraint>

        <Constraint
            android:id="@id/scrollable_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:alpha="0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/pitomnik_iv" />
        <Constraint
            android:id="@id/btn_info"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
             />
        <Constraint
            android:id="@id/image_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:rotation="0"
            motion:layout_constraintBottom_toBottomOf="@+id/btn_info"
            motion:layout_constraintEnd_toStartOf="@+id/btn_info"
            motion:layout_constraintTop_toTopOf="@+id/btn_info" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/show_text">
        <Constraint
            android:id="@id/pitomnik_iv"
            >
            <CustomAttribute
                motion:attributeName="Saturation"
                motion:customFloatValue="0.5" />
            <CustomAttribute
                motion:attributeName="Contrast"
                motion:customFloatValue="0.5" />

        </Constraint>
        />
        <Constraint
            android:id="@id/scrollable_history"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/btn_info"
            android:layout_width="28dp"
            android:layout_height="28dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/scrollable_history"
            motion:layout_constraintTop_toTopOf="@+id/scrollable_history" />

        <Constraint
            android:id="@id/image_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            android:rotation="90"
            motion:layout_constraintBottom_toBottomOf="@+id/btn_info"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@+id/show_text"
        motion:constraintSetStart="@+id/hide_text"
        motion:duration="500"
        motion:interpolator="linear">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/btn_info"
            motion:touchAnchorSide="bottom" />
        <KeyFrameSet>
            <KeyAttribute
                android:rotation="0"
                motion:framePosition="1"
                motion:target="@id/image_arrow" />
            <KeyPosition
                motion:framePosition="27"
                motion:keyPositionType="deltaRelative"
                motion:percentX="-0.2585034"
                motion:percentY="0.50630915"
                motion:target="@id/image_arrow" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
